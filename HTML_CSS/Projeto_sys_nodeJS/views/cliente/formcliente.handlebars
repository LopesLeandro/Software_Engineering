                <input  value="sim" type="radio" id="txtfinalizada" name="finalizada" {{checked cliente.finalizada 'sim'}}>Sim
                <input  value="nao" type="radio" id="txtfinalizada" name="finalizada" {{checked cliente.finalizada 'nao'}}>Não
