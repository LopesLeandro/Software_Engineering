                    <option value="{{cliente.tag}}" hidden="hidden" selected="selected">{{cliente.tag}}</option>
                    <option>Auditoria Interna</option>
                    <option>Compliance</option>
                    <option>Controle Interno</option>
                    <option>Gerenciamento de Riscos</option>
                    <option>Gestão de Seguros</option>
                </select>
            </div>
            <!--TAG-->
