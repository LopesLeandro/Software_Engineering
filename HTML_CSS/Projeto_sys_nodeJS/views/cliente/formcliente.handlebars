    <body>
        <form action="/clientes/save" method="POST">
            <input type="hidden" value="{{cliente.id}}" name="id">
            <div class="form-group">
                <label for="txttarefa">Tarefa:</label>
                <input class="form-control" value="{{cliente.tarefa}}" type="text" id="txttarefa" name="tarefa">
            </div>
            <div class="form-group">
                <label for="txtdescricao">Descrição:</label>
                <textarea class="form-control" type="textarea" id="txtdescricao" name="descricao">{{cliente.descricao}}</textarea>
            </div>
            <div class="form-group">
                <label for="vencimento">Vencimento:</label>
                <input class="form-control" value="{{cliente.vencimento}}" type="date" id="vencimento" name="vencimento"></input>
            <!--data-format="00/00/0000"  placeholder="dd/mm/yyyy"-->
            </div>
            <!--PRIORIDADE-->
            <div class="form-group">
                <label for="txtprioridade">Prioridade:</label>
                <select class="form-control" id="txtprioridade" name="prioridade">
                    <option value="{{cliente.prioridade}}" hidden="hidden" selected="selected">{{cliente.prioridade}}</option>
                    <option>Baixa</option>
                    <option>Média</option>
                    <option>Alta</option>
                </select>
            </div>
            <!--PRIORIDADE-->
            <div class="form-group">
                <label for="responsavel">Responsável:</label>
                <input class="form-control" value="{{cliente.responsavel}}" type="text" id="responsavel" name="responsavel">
            </div>
            <!--TAG-->
